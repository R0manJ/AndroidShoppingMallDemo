<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_card_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_third_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_title"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_third_product_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_third_product_title"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/iv_third_product_image"
            android:layout_width="106dp"
            android:layout_height="146dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_third_product_subtitle"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_first_product_image"
            android:layout_width="87dp"
            android:layout_height="86dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="97dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_title" />

        <ImageView
            android:id="@+id/iv_second_product_image"
            android:layout_width="91dp"
            android:layout_height="94dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="97dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_first_product_image" />

        <TextView
            android:id="@+id/tv_first_product_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_first_product_title"
            app:layout_constraintRight_toLeftOf="@+id/iv_first_product_image"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_first_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_card_title"
            app:layout_constraintRight_toLeftOf="@+id/iv_first_product_image"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.521" />

        <TextView
            android:id="@+id/tv_second_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="53dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_first_product_subtitle"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_second_product_image"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/tv_second_product_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_second_product_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_second_product_title" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>