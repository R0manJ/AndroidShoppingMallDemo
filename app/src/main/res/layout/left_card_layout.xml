<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <TextView
        android:layout_width="368dp"
        android:layout_height="20dp"
        android:id="@+id/tv_card_title"
        android:text="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/iv_first_product_image"
        android:layout_width="99dp"
        android:layout_height="92dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_title"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_first_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_title"
        app:layout_constraintLeft_toRightOf="@+id/iv_first_product_image"
        android:layout_marginLeft="2dp" />

    <TextView
        android:id="@+id/tv_first_product_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_product_title"
        app:layout_constraintLeft_toRightOf="@+id/iv_first_product_image"
        android:layout_marginLeft="2dp" />

    <TextView
        android:id="@+id/tv_third_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/tv_first_product_title"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_title"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.538" />

    <TextView
        android:id="@+id/tv_third_product_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_third_product_title"
        app:layout_constraintLeft_toRightOf="@+id/tv_first_product_subtitle"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/iv_third_product_image"
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="25dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_third_product_subtitle"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_second_product_image"
            android:layout_width="126dp"
            android:layout_height="113dp"
            android:layout_marginLeft="77dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="100dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_first_product_title"
            app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_second_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_first_product_image"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_second_product_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_second_product_title" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>